<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CovidTracker.CovidTrackerSymptomTracker">

    <ScrollView
        android:id="@+id/wrapperView"
        android:layout_width="376dp"
        android:layout_height="615dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/lightBackgroundColor"
        android:backgroundTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.541">

        <LinearLayout
            android:id="@+id/innerView"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="156dp">

            <LinearLayout
                android:id="@+id/btnWrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="156dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/symptomTracker_intro"
                    android:textColor="@color/darkPinkHighlight"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="45dp"
                    tools:layout_editor_absoluteY="156dp" />

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/symptomTracker_subtitle"
                    tools:layout_editor_absoluteX="45dp"
                    tools:layout_editor_absoluteY="193dp" />

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="232dp">

                    <LinearLayout
                        android:id="@+id/btn1"
                        android:layout_width="109dp"
                        android:layout_height="109dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/box_no_shadow"
                        android:onClick="saveSymptom"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.372"
                        tools:layout_editor_absoluteX="61dp">

                        <ImageView
                            android:id="@+id/icon1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.35"
                            app:srcCompat="@android:drawable/btn_star_big_on"
                            tools:layout_editor_absoluteX="61dp" />

                        <TextView
                            android:id="@+id/title1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Fever"
                            tools:layout_editor_absoluteX="61dp"
                            tools:layout_editor_absoluteY="303dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn2"
                        android:layout_width="109dp"
                        android:layout_height="109dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/box_no_shadow"
                        android:onClick="saveSymptom"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.372"
                        tools:layout_editor_absoluteX="175dp">

                        <ImageView
                            android:id="@+id/icon2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.35"
                            app:srcCompat="@android:drawable/btn_star_big_on"
                            tools:layout_editor_absoluteX="175dp" />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Cough"
                            tools:layout_editor_absoluteX="175dp"
                            tools:layout_editor_absoluteY="303dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn3"
                        android:layout_width="109dp"
                        android:layout_height="109dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/box_no_shadow"
                        android:onClick="saveSymptom"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.372"
                        tools:layout_editor_absoluteX="289dp">

                        <ImageView
                            android:id="@+id/icon3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.35"
                            app:srcCompat="@android:drawable/btn_star_big_on"
                            tools:layout_editor_absoluteX="289dp" />

                        <TextView
                            android:id="@+id/title3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Loss of taste or smell"
                            tools:layout_editor_absoluteX="289dp"
                            tools:layout_editor_absoluteY="303dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="232dp">

                    <LinearLayout
                        android:id="@+id/btn4"
                        android:layout_width="109dp"
                        android:layout_height="109dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/box_no_shadow"
                        android:onClick="saveSymptom"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.372"
                        tools:layout_editor_absoluteX="61dp">

                        <ImageView
                            android:id="@+id/icon4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.35"
                            app:srcCompat="@android:drawable/btn_star_big_on"
                            tools:layout_editor_absoluteX="61dp" />

                        <TextView
                            android:id="@+id/title4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Fatigue"
                            tools:layout_editor_absoluteX="61dp"
                            tools:layout_editor_absoluteY="303dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn5"
                        android:layout_width="109dp"
                        android:layout_height="109dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/box_no_shadow"
                        android:onClick="saveSymptom"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.372"
                        tools:layout_editor_absoluteX="175dp">

                        <ImageView
                            android:id="@+id/icon5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.35"
                            app:srcCompat="@android:drawable/btn_star_big_on"
                            tools:layout_editor_absoluteX="175dp" />

                        <TextView
                            android:id="@+id/title5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Heavy chest"
                            tools:layout_editor_absoluteX="175dp"
                            tools:layout_editor_absoluteY="303dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn6"
                        android:layout_width="109dp"
                        android:layout_height="109dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/box_no_shadow"
                        android:onClick="saveSymptom"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.372"
                        tools:layout_editor_absoluteX="289dp">

                        <ImageView
                            android:id="@+id/icon6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.35"
                            app:srcCompat="@android:drawable/btn_star_big_on"
                            tools:layout_editor_absoluteX="289dp" />

                        <TextView
                            android:id="@+id/title6"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Loss of appetite"
                            tools:layout_editor_absoluteX="289dp"
                            tools:layout_editor_absoluteY="303dp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/saveBtn"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/box_shadow"
                    android:backgroundTint="@color/btnColor"
                    android:backgroundTintMode="multiply"
                    android:onClick="appendHistory"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/diaryBtn"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/box_shadow"
                    android:backgroundTint="@color/btnColor"
                    android:backgroundTintMode="multiply"
                    android:onClick="openDiary"
                    android:text="Your diary"
                    android:textAllCaps="false"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/feelingLow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Feeling low? We are here to listen."
                    android:textColor="@color/darkPinkHighlight"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/advice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Tap the chat icon to talk to your virtual doctor." />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationBar"
        android:layout_width="417dp"
        android:layout_height="55dp"
        android:background="@color/colourAccentDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/chatIcon"
            android:layout_width="43dp"
            android:layout_height="44dp"
            android:layout_gravity="center|end"
            android:layout_marginRight="15dp"
            android:onClick="openChat"
            app:srcCompat="@android:drawable/sym_action_chat" />
    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <TextView
        android:id="@+id/appTitle4"
        android:layout_width="416dp"
        android:layout_height="58dp"
        android:background="@color/colourAccentDark"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="CovidTracker"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>